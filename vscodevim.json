{
  "vim.incsearch": true,
  "vim.leader": " ",
  "vim.sneak": true,
  "vim.sneakReplacesF": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["C-k"],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["C-j"],
      "commands": ["editor.action.marker.nextInFiles"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["C-a"],
      "commands": ["cursorHome"]
    },
    {
      "before": ["C-e"],
      "commands": ["cursorEnd"]
    },
    {
      "before": ["C-b"],
      "after": ["<Left>"]
    },
    {
      "before": ["C-f"],
      "after": ["<Right>"]
    },
    {
      "before": ["C-d"],
      "after": ["<Del>"]
    },
    {
      "before": ["C-n"],
      "after": ["<Down>"]
    },
    {
      "before": ["C-p"],
      "after": ["<Up>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", ":"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "="],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "b", "w"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "c", "<space>"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["editor.action.addCommentLine"]
    },
    {
      "before": ["<leader>", "c", "u"],
      "commands": ["editor.action.removeCommentLine"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["<leader>", "g", "d"],
      "commands": ["git.openChange"]
    },
    {
      "before": ["<leader>", "g", "f"],
      "commands": ["git.fetch"]
    },
    {
      "before": ["<leader>", "g", "g"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "g", "l"],
      "commands": ["git.pull"]
    },
    {
      "before": ["<leader>", "g", "m"],
      "commands": ["git.merge"]
    },
    {
      "before": ["<leader>", "g", "p"],
      "commands": ["git.push"]
    },
    {
      "before": ["<leader>", "g", "s"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["<leader>", "j", "j"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "j", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "n", "n"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": ["workbench.view.search"]
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.view.search"]
    },
    {
      "before": ["<leader>", "s", "r"],
      "commands": ["workbench.view.search"]
    },
    {
      "before": ["<leader>", "t", "n"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "y", "f"],
      "commands": ["copyFilePath"]
    },
    {
      "before": ["<leader>", "y", "n"],
      "commands": ["copyRelativeFilePath"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "="],
      "commands": ["editor.action.formatSelection"]
    },
    {
      "before": ["<leader>", "c", "<space>"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["editor.action.addCommentLine"]
    },
    {
      "before": ["<leader>", "c", "u"],
      "commands": ["editor.action.removeCommentLine"]
    }
  ]
}
